<!DOCTYPE html>
<html>
  <head>
    <title>Flights Index</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Flight List</h1>
    <table>
        <thead>
          <tr>
            <th>Airline</th>
            <th>Flight Number</th>
            <th>Departs</th>
            <th>Departure Airport</th>
          </tr>
        </thead>
        <tbody>
          <% flights.forEach( (m) => { %>
            <tr>
              <td><%= m.airline %></td>
              <td><%= m.flightNo %></td>
              <td><%= m.departs %></td>
              <td><%= m.airport %></td>
              <td><a href="/flights/<%= m._id %>">DETAILS</a></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <h4><a href="/flights/new">Add new flight</a></h4>
  </body>
</html>


